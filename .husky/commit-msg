#\!/bin/sh
# Validate commit message format
commit_regex="^(feat|fix|docs|style|refactor|test|chore|perf)(\(.+\))?: .{1,50}"

if \! grep -qE "$commit_regex" "$1"; then
    echo "âŒ Invalid commit message format\!"
    echo "âœ… Use format: type(scope): description"
    echo "ğŸ“ Types: feat, fix, docs, style, refactor, test, chore, perf"
    echo "ğŸ“ Example: feat(auth): add OAuth 2.0 support"
    exit 1
fi
