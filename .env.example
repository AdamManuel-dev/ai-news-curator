# AI Content Curator Agent - Environment Configuration
# Copy this file to .env and fill in your specific values

# ============================================================================
# Application Configuration
# ============================================================================

PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_news_curator
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# ============================================================================
# Cache Configuration (Redis)
# ============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# AI/ML Service API Keys (Required for full functionality)
# ============================================================================

ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
PINECONE_API_KEY=your_pinecone_api_key

# ============================================================================
# Optional Configuration
# ============================================================================

# Pinecone settings
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=ai-content-curator

# Security
JWT_SECRET=your_jwt_secret_key_here

# HTTPS/TLS Configuration
HTTPS_ENABLED=false
HTTPS_PORT=3443
TLS_KEY_PATH=/path/to/private.key
TLS_CERT_PATH=/path/to/certificate.crt
TLS_CA_PATH=/path/to/ca-bundle.crt
TLS_PASSPHRASE=your_tls_passphrase
FORCE_HTTPS=false
TRUST_PROXY=false

# Monitoring
ENABLE_METRICS=true
ENABLE_REQUEST_LOGGING=true
